<%= form_with(model: [:admin, state], class: "contents") do |form| %>
  <% if state.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-800 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this State from being saved:</h2>
      <ul>
        <% state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :code %>
    <%= form.text_field :code, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :country_id %>
    <%= form.select :country_id, countries_for_select, :prompt => "Select Country", class: "px-3 py-2 mt-2" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md py-3 px-5 bg-primary-800 text-white inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
  </div>
<% end %>
