<%= form_with(model: [:manage, phone], class: "contents") do |form| %>
  <% if phone.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-800 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(phone.errors.count, "error") %> prohibited this Phone from being saved:</h2>
      <ul>
        <% phone.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :phone_type %>
    <%= form.number_field :phone_type, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :country_code %>
    <%= form.text_field :country_code, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :number %>
    <%= form.text_field :number, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :phone_contirmation_token %>
    <%= form.text_field :phone_contirmation_token, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :phone_confirmation_token_expiration %>
    <%= form.datetime_field :phone_confirmation_token_expiration, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :phone_confirmed %>
    <%= form.check_box :phone_confirmed, class: "block mt-2 h-5 w-5" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md py-3 px-5 bg-primary-800 text-white inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
  </div>
<% end %>
