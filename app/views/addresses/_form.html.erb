<%= form_with(model: address, class: "contents") do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-800 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this Address from being saved:</h2>
      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :address_type %>
    <%= form.number_field :address_type, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :address1, "Address Line 1" %>
    <%= form.text_field :address1, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :address2,  "Address Line 2" %>
    <%= form.text_field :address2, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :suite %>
    <%= form.text_field :suite, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :city %>
    <%= form.text_field :city, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :state_id %>
    <%= form.text_field :state_id, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :zipcode, "Zip Code" %>
    <%= form.text_field :zipcode, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md py-3 px-5 bg-primary-800 text-white inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
  </div>
<% end %>
