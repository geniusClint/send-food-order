<div class="mx-auto w-full">
  <div class="mx-auto">

    <%= render @address %>

    <%= link_to 'Edit this address', edit_address_path(@address), class: "rounded-md py-3 px-5 bg-gray-100 inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this address', address_path(@address), method: :delete, class: "rounded-md py-3 px-5 bg-gray-100 inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
    </div>
    <%= link_to 'Back to addresses', addresses_path, class: "rounded-md py-3 px-5 bg-gray-100 inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
  </div>
</div>
