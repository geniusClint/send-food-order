<%= form_with(model: [:manage, restaurant], class: "contents") do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-800 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this Restaurant from being saved:</h2>
      <ul>
        <% restaurant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name, class: "req-field" %>
    <%= form.text_field :name, class: "px-3 py-2 mt-2", required: true %>
  </div>
  <div class="my-5">
    <%= form.label :location_name %> <%= render partial: 'shared/infotip', locals: { element_id: "location_name" } %>
    <%= form.text_field :location_name, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :city, class: "req-field" %>
    <%= form.text_field :city, class: "px-3 py-2 mt-2" %>
  </div>
  <div class="my-5">
    <%= form.label :state_id, class: "req-field" %>
    <%= form.select :state_id, states_for_select, :prompt => "Select State", class: "px-3 py-2 mt-2", required: true %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md py-3 px-5 bg-primary-800 text-white inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
  </div>
<% end %>
