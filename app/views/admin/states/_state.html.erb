<div id="<%= dom_id state %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= state.name %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Code:</strong>
    <%= state.code %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Country:</strong>
    <%= state.country.name %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this state", admin_state_path(state), class: "rounded-md py-3 px-5 bg-gray-100 inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
    <%= link_to 'Edit this state', edit_admin_state_path(state), class: "rounded-md py-3 px-5 bg-gray-100 inline-block font-medium capitalize hover:text-white hover:bg-accent-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-400" %>
    <hr class="mt-6">
  <% end %>
</div>
