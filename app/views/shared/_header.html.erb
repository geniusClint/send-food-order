<div data-controller="navbar" class="mx-auto max-w-7xl lg:divide-y lg:divide-gray-200">
  <div class="relative flex h-16 justify-between">
    <div class="relative z-10">
      <div class="flex flex-shrink-0 items-center justify-center h-full">
        <%= link_to root_path do %>
          <%= image_tag "sfo_logo_2.svg", class: "h-12 md:h-14 w-auto", alt: "SendFoodOrder Logo" %>
        <% end %>
      </div>
    </div>
    <!-- search -->
    <div class="relative z-0 flex items-center justify-center px-2 sm:absolute sm:inset-0">
      <div class="relative">
        <div class="absolute inset-y-0 flex items-center pl-2"><%= icon("geo-alt-fill", classes: "text-orange-500 h-5 w-5") %></div>
        <select class="z-20 mr-4 pl-8 rounded-md text-gray-900 block leading-tight border-0 focus:ring-1" name="location-select" id="location-select">
          <option>Location</option>
          <option>My Location</option>
        </select>
      </div>
      <div class="w-full sm:max-w-xs">
        <label for="search" class="sr-only">Search Cuisine</label>
        <div class="relative">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <%= icon("search", classes: "h-5 w-5 text-gray-400") %>
          </div>
          <input id="search" name="search" class="h-10 block w-full rounded-md border-0 bg-white py-1.5 pl-10 pr-3 text-black-900 ring-1 ring-inset ring-gray-300 placeholder:text-black-900 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6" placeholder="Search cuisine" type="search">
        </div>
      </div>
    </div>
    <div class="relative z-10 flex items-center lg:hidden">
      <!-- Mobile menu button -->
      <button data-action="navbar#toggleMobileMenu" type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset" aria-controls="mobile-menu" aria-expanded="false">
        <span class="absolute -inset-0.5"></span>
        <span class="sr-only">Open menu</span>
        <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
          -->
        <svg data-navbar-target="hamburgerIcon" class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
          -->
        <svg data-navbar-target="closeIcon" class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:relative lg:z-10 lg:ml-4 lg:flex lg:items-center">
      <% if !user_signed_in? %>
        <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 text-sm hover:bg-gray-100" %>
        <%= link_to "Log In", new_user_session_path, class: "block px-4 py-2 text-sm hover:bg-gray-100" %>
      <% else %>
        <!-- Profile dropdown -->
        <div class="relative ml-4 flex-shrink-0">
          <div>
            <button data-action="navbar#toggleUserMenu" type="button" class="relative flex rounded-full bg-white focus:outline-none focus:ring-2 focus:ring-offset-2" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
              <span class="absolute -inset-1.5"></span>
              <span class="sr-only">Open user menu</span>
              <%= user_avatar(current_user.full_name, colors: 1, size: 42) %>
            </button>
          </div>
          <div data-navbar-target="userMenu" class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
            <a href="#" class="block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="user-menu-item-0">Your Profile</a>
            <a href="#" class="block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="user-menu-item-1">Settings</a>
            <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Mobile menu, show/hide based on menu state. -->
  <div data-navbar-target="mobileMenu" class="hidden" role="menu">
    <nav class="lg:hidden" aria-label="Global" id="mobile-menu">
      <% if !user_signed_in? %>
        <div class="space-y-1 px-2 pb-3 pt-2">
          <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 text-sm hover:bg-gray-100" %>
          <%= link_to "Log In", new_user_session_path, class: "block px-4 py-2 text-sm hover:bg-gray-100" %>
        </div>
      <% else %>
        <div class="border-t border-gray-200 pb-3 pt-4">
          <div class="flex items-center px-4">
            <div class="flex-shrink-0">
              <%= user_avatar(current_user&.full_name, colors: 1, size: 42) %>
            </div>
            <div class="ml-3">
              <div class="text-base font-medium text-gray-800"><%= current_user&.full_name || '' %></div>
              <div class="text-sm font-medium text-gray-500"><%= current_user&.email || '' %></div>
            </div>
          </div>
          <div class="mt-3 space-y-1 px-2">
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-500 hover:bg-gray-50 hover:text-gray-900">Your Profile</a>
            <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-500 hover:bg-gray-50 hover:text-gray-900">Settings</a>
            <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "block rounded-md px-3 py-2 text-base font-medium text-gray-500 hover:bg-gray-50 hover:text-gray-900" %>
          </div>
        </div>
      <% end %>
    </nav>
  </div>
</div>